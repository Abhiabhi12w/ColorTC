async function extractRadComboBoxValues() {
    // Update these selectors with your actual IDs or relevant classes for other dropdowns
    function getDisplayedValue(containerId) {
        const container = document.querySelector('#' + containerId);
        if (!container) return '';
        const input = container.querySelector('.rcbInput');
        return input ? input.value : '';
    }

    // List the container IDs of your three dropdowns (update as needed)
    const dropdownIds = [
        'PROVCnt_radlicType', // The first dropdown as in your screenshot
        'SECOND_DROPDOWN_ID', // Update with actual container ID
        'THIRD_DROPDOWN_ID'   // Update with actual container ID
    ];

    // If you have a way to select options programmatically, add below logic.
    // For demonstration, we'll just get currently displayed values:
    let result = [];
    result.push(['Dropdown1', 'Dropdown2', 'Dropdown3']);

    // If you want to loop over all values, you'll need to simulate clicks and reads.
    // For now, we show current values:
    const row = dropdownIds.map(id => getDisplayedValue(id));
    result.push(row);

    // Output CSV for Excel
    result.forEach(r => console.log(r.join(',')));

    // BONUS: If you want to loop all available options for the first dropdown,
    // Find option elements (usually in a dropdown popup that opens on click).
    // More advanced automation available if needed.
}
extractRadComboBoxValues();
